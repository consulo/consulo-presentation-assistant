<consulo-plugin>
	<id>consulo.presentationAssistant</id>
	<name>Presentation Assistant</name>
	<version>SNAPSHOT</version>
	<vendor>consulo.io</vendor>

	<tags>
		<tag>ide.extension</tag>
	</tags>

	<actions>
		<action id="TogglePresentationAssistantAction" class="consulo.presentationAssistant.action.TogglePresentationAssistantAction" />
	</actions>

	<extensions defaultExtensionNs="com.intellij">
		<applicationService serviceImplementation="consulo.presentationAssistant.PresentationAssistant" lazy="false" />
	</extensions>
</consulo-plugin>